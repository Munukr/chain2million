{
    "version": 2,
    "builds": [
        {
            "src": "public/**",
            "use": "@vercel/static"
        },
        {
            "src": "api/bot.js",
            "use": "@vercel/node"
        }
    ],
    "routes": [
        {
            "src": "/bot.*",
            "dest": "api/bot.js"
        },
        {
            "src": "/",
            "dest": "/public/index.html"
        },
        {
            "src": "/admin",
            "dest": "/public/admin.html"
        },
        {
            "src": "/(.*)",
            "dest": "/public/$1"
        }
    ]
} 